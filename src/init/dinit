service "ntfy-resources-usage-plugin" {
    description = "Send NTFY alerts to your smart-phone when your Unix computer is running out of resources."
    user = "root"
    group = "root"
    command = "/usr/bin/ntfy-resources-usage"
    logfile = "/var/log/ntfy-resources-usage.log"
    pidfile = "/run/ntfy-resources-usage-plugin.pid"
    dependencies = ["net", "dns", "logger"]
    reload_signal = "HUP"
}
